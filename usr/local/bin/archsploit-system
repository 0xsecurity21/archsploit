## Install Reverse Engineering Packages
## ------------------------------------
function packages_reverse()
{
	loadheader "# Step: Install Reverse Engineering Packages"
}

## Install Scanning Packages
## -------------------------
function packages_scanning()
{
	loadheader "# Step: Install Scanning Packages"
}

## Install Sniffing Packages
## -------------------------
function packages_sniffing()
{
	loadheader "# Step: Install Sniffing Packages"
}

## Install Social Engineering Packages
## -----------------------------------
function packages_social()
{
	loadheader "# Step: Install Social Engineering Packages"
}

## Install Stress-Testing Packages
## -------------------------------
function packages_stressing()
{
	loadheader "# Step: Install Stress-Testing Packages"
}

## Install Vulnerability Packages
## ------------------------------
function packages_vulnerability()
{
	loadheader "# Step: Install Vulnerability Packages"
}

## Install Webapps Packages
## ------------------------
function packages_webapps()
{
	loadheader "# Step: Install Webapps Packages"
}

## Install Wireless Packages
## -------------------------
function packages_wireless()
{
	loadheader "# Step: packages_wireless()"
}

## -------- ##
## Callback ##
## -------- ##

if [ "$#" -eq  "0" ]
then
	usage
else
	if [ "$1" == "--command" -o "$1" == "-c" ];
	then
		clear
		sudo whoami >/dev/null 2>&1

		showbanner
		checkinternet
		warning

		case "$2" in
	    clean)
	        system_cleaner
	        ;;
	    update)
	        system_updater
	        ;;
	    gresource)
	        system_gresource
	        ;;
		*)
	        usage
	        exit 1
	        ;;
	    esac
	    exit 0
	elif [ "$1" == "--install" -o "$1" == "-i" ];
	then
		clear
		sudo whoami >/dev/null 2>&1

		showbanner
		checkinternet
		warning

		case "$2" in
	    bluetooth)
			packages_bluetooth
			;;
		cracking)
			packages_cracking
			;;
		cryptography)
			packages_cryptography
			;;
		debugger)
			packages_debugger
			;;
		exploitation)
			packages_exploitation
			;;
		fingerprint)
			packages_fingerprint
			;;
		forensics)
			packages_forensics
			;;
		gathering)
			packages_gathering
			;;
		hardware)
			packages_hardware
			;;
		honeypot)
			packages_honeypot
			;;
		malware)
			packages_malware
			;;
		miscs)
			packages_miscs
			;;
		networking)
			packages_networking
			;;
		reporting)
			packages_reporting
			;;
		reverse)
			packages_reverse
			;;
		scanning)
			packages_scanning
			;;
		sniffing)
			packages_sniffing
			;;
		social)
			packages_social
			;;
		stress-testing)
			packages_stressing
			;;
		vulnerability)
			packages_vulnerability
			;;
		webapps)
			packages_webapps
			;;
		wireless)
			packages_wireless
			;;
		all)
			packages_bluetooth
			packages_cracking
			packages_cryptography
			packages_debugger
			packages_exploitation
			packages_fingerprint
			packages_forensics
			packages_gathering
			packages_hardware
			packages_honeypot
			packages_malware
			packages_miscs
			packages_networking
			packages_reporting
			packages_reverse
			packages_scanning
			packages_sniffing
			packages_social
			packages_stressing
			packages_vulnerability
			packages_webapps
			packages_wireless
			;;
		*)
	        usage
	        exit 1
	        ;;
	    esac
	    exit 0
	elif [ "$1" == "--help" -o "$1" == "-h" ];
	then
		usage
	else
		usage
	fi
fi
