## Install Cracking Packages
## -------------------------
function packages_cracking()
{
	loadheader "# Step: Install Cracking Packages"

	## Update System
	## -------------
	sudo pacman -Syyu --noconfirm --needed >/dev/null 2>&1
	loadstatus " [+] Update System Packages" "OK" "valid"

	## Install Arch Repository Tools
	## -----------------------------
	sudo pacman -S hashcat >/dev/null 2>&1
	loadstatus " [+] Install Hashcat" "OK" "valid"

	sudo pacman -S hydra >/dev/null 2>&1
	loadstatus " [+] Install Hydra" "OK" "valid"

	sudo pacman -S john >/dev/null 2>&1
	loadstatus " [+] Install John" "OK" "valid"

	sudo pacman -S ncrack >/dev/null 2>&1
	loadstatus " [+] Install Ncrack" "OK" "valid"

	sudo pacman -S ophcrack >/dev/null 2>&1
	loadstatus " [+] Install Ophcrack" "OK" "valid"

	## Install Github Repository Tools
	## -------------------------------
	sudo mkdir -p /opt/archsploit/
	cd /tmp/
	sudo git clone https://github.com/archsploit/packages-cracking

	if [ ! -d "/tmp/packages-cracking/opt/archsploit/cracking/" ];
	then
		## Copy Cracking Tools
		## -------------------
		sudo cp -r /tmp/packages-cracking/opt/archsploit/cracking/ /opt/archsploit/
		loadstatus " [+] Copy Github Tools" "OK" "valid"

		## CredCrack
	    ## https://github.com/gojhonny/CredCrack/
	    ## --------------------------------------
		if [ ! -f "/etc/archsploit/packages/credcrack.md" ];
		then
		    sudo chmod +x /opt/archsploit/cracking/credcrack/credcrack.py
		    sudo ln -s /opt/archsploit/cracking/credcrack/credcrack.py /usr/bin/credcrack

			sudo cp /tmp/packages-cracking/usr/applications/archsploit-credcrack.desktop /usr/share/applications/archsploit-credcrack.desktop
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/credcrack.md >/dev/null 2>&1
			loadstatus " [+] Installing CredCrack" "OK" "valid"
		else
			loadstatus " [+] CredCrack already installed" "OK" "valid"
		fi

		## Findmyhash
		## https://code.google.com/archive/p/findmyhash/
		## ---------------------------------------------
		if [ ! -f "/etc/archsploit/packages/findmyhash.md" ];
		then
			sudo chmod +x /opt/archsploit/cracking/findmyhash/findmyhash.py
			sudo ln -s /opt/archsploit/cracking/findmyhash/findmyhash.py /usr/bin/findmyhash

			sudo cp /tmp/packages-cracking/usr/applications/archsploit-findmyhash.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/findmyhash.md >/dev/null 2>&1
			loadstatus " [+] Installing Findmyhash" "OK" "valid"
		else
			loadstatus " [+] Findmyhash already installed" "OK" "valid"
		fi

		## HashID
		## http://code.google.com/p/hash-identifier/
		## -----------------------------------------
		if [ ! -f "/etc/archsploit/packages/hashid.md" ];
		then
			sudo chmod +x /opt/archsploit/cracking/hashid/hashid.py
			sudo ln -s /opt/archsploit/cracking/hashid/hashid.py /usr/bin/hashid

			sudo cp /tmp/packages-cracking/usr/applications/archsploit-hashid.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/hashid.md >/dev/null 2>&1
			loadstatus " [+] Installing HashID" "OK" "valid"
		else
			loadstatus " [+] HashID already installed" "OK" "valid"
		fi

		## HashTag
		## https://github.com/SmeegeSec/HashTag/
		## -------------------------------------
		if [ ! -f "/etc/archsploit/packages/hashtag.md" ];
		then
			sudo chmod +x /opt/archsploit/cracking/hashtag/hashtag.py
			sudo ln -s /opt/archsploit/cracking/hashtag/hashtag.py /usr/bin/hashtag

			sudo cp /tmp/packages-cracking/usr/applications/archsploit-hashtag.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/hashtag.md >/dev/null 2>&1
			loadstatus " [+] Installing HashTag" "OK" "valid"
		else
			loadstatus " [+] HashTag already installed" "OK" "valid"
		fi

		## Rainbowcrack
		## https://project-rainbowcrack.com/
		## ---------------------------------
		if [ ! -f "/etc/archsploit/packages/rainbowcrack.md" ];
		then
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rcrack
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rt2rtc
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rtc2rt
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rtgen
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rtmerge
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rtsort
			sudo touch /usr/local/bin/rcrack
			sudo chmod +x /usr/local/bin/rcrack
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rcrack >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rcrack >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rcrack >/dev/null 2>&1
			echo './rcrack' | sudo tee -a /usr/local/bin/rcrack >/dev/null 2>&1
			sudo touch /usr/local/bin/rt2rtc
			sudo chmod +x /usr/local/bin/rt2rtc
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rt2rtc >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rt2rtc >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rt2rtc >/dev/null 2>&1
			echo './rt2rtc' | sudo tee -a /usr/local/bin/rt2rtc >/dev/null 2>&1
			sudo touch /usr/local/bin/rtc2rt
			sudo chmod +x /usr/local/bin/rtc2rt
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rtc2rt >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rtc2rt >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rtc2rt >/dev/null 2>&1
			echo './rtc2rt' | sudo tee -a /usr/local/bin/rtc2rt >/dev/null 2>&1
			sudo touch /usr/local/bin/rtgen
			sudo chmod +x /usr/local/bin/rtgen
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rtgen >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rtgen >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rtgen >/dev/null 2>&1
			echo './rtgen' | sudo tee -a /usr/local/bin/rtgen >/dev/null 2>&1
			sudo touch /usr/local/bin/rtmerge
			sudo chmod +x /usr/local/bin/rtmerge
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rtmerge >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rtmerge >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rtmerge >/dev/null 2>&1
			echo './rtmerge' | sudo tee -a /usr/local/bin/rtmerge >/dev/null 2>&1
			sudo touch /usr/local/bin/rtsort
			sudo chmod +x /usr/local/bin/rtsort
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rtsort >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rtsort >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rtsort >/dev/null 2>&1
			echo './rtsort' | sudo tee -a /usr/local/bin/rtsort >/dev/null 2>&1

			sudo cp /tmp/packages-cracking/usr/applications/archsploit-rcrack.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/rainbowcrack.md >/dev/null 2>&1
			loadstatus " [+] Installing Rainbowcrack" "OK" "valid"
		else
			loadstatus " [+] Rainbowcrack already installed" "OK" "valid"
		fi
	fi

	## Correct User Permissions
    ## ------------------------
    sudo chown -R $USER:users /opt/*
	loadstatus " [+] Correct User Permissions" "OK" "valid"
	loadnotice "ArchSploit Cracking packages installed successfully"
}

