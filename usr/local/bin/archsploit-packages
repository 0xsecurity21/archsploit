	sudo pacman -S tcpdump >/dev/null 2>&1
	loadstatus " [+] Install TCPdump" "OK" "valid"

	sudo pacman -S tcpreplay >/dev/null 2>&1
	loadstatus " [+] Install TCPreplay" "OK" "valid"

	sudo pacman -S tor >/dev/null 2>&1
	loadstatus " [+] Install Tor" "OK" "valid"

	sudo pacman -S torsocks >/dev/null 2>&1
	loadstatus " [+] Install Torsocks" "OK" "valid"

	## Install Github Repository Tools
	## -------------------------------
	sudo mkdir -p /opt/archsploit/
	cd /tmp/
	sudo git clone https://github.com/archsploit/packages-networking

	if [ ! -d "/tmp/packages-networking/opt/archsploit/networking/" ];
	then
		## Copy Forensics Tools
		## --------------------
		sudo cp -r /tmp/packages-networking/opt/archsploit/networking/ /opt/archsploit/
		loadstatus " [+] Copy Github Tools" "OK" "valid"

		## Cymothoa
	    ## http://sourceforge.net/projects/cymothoa/
	    ## -----------------------------------------
		if [ ! -f "/etc/archsploit/packages/cymothoa.md" ];
		then
			cd /opt/archsploit/networking/cymothoa/
			sudo make >/dev/null 2>&1
			sudo ln -s /opt/archsploit/networking/cymothoa/bgrep /usr/bin/bgrep
			sudo ln -s /opt/archsploit/networking/cymothoa/cymothoa /usr/bin/cymothoa

			sudo cp /tmp/packages-networking/usr/applications/archsploit-cymothoa.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/cymothoa.md >/dev/null 2>&1
			loadstatus " [+] Installing Cymothoa" "OK" "valid"
		else
			loadstatus " [+] Cymothoa already installed" "OK" "valid"
		fi

		## Nishang
		## https://github.com/samratashok/nishang/
		## ---------------------------------------
		if [ ! -f "/etc/archsploit/packages/nishang.md" ];
		then
			sudo touch /usr/local/bin/nishang
			sudo chmod +x /usr/local/bin/nishang
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/nishang >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/nishang >/dev/null 2>&1
			echo 'tree /opt/archsploit/networking/nishang/' | sudo tee -a /usr/local/bin/nishang >/dev/null 2>&1

			sudo cp /tmp/packages-networking/usr/applications/archsploit-nishang.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/nishang.md >/dev/null 2>&1
			loadstatus " [+] Installing Nishang" "OK" "valid"
		else
			loadstatus " [+] Nishang already installed" "OK" "valid"
		fi

		## PowerSploit
		## https://github.com/PowerShellMafia/PowerSploit/
		## -----------------------------------------------
		if [ ! -f "/etc/archsploit/packages/powersploit.md" ];
		then
			sudo touch /usr/local/bin/powersploit
			sudo chmod +x /usr/local/bin/powersploit
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/powersploit >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/powersploit >/dev/null 2>&1
			echo 'tree /opt/archsploit/networking/powersploit/' | sudo tee -a /usr/local/bin/powersploit >/dev/null 2>&1

			sudo cp /tmp/packages-networking/usr/applications/archsploit-powersploit.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/powersploit.md >/dev/null 2>&1
			loadstatus " [+] Installing PowerSploit" "OK" "valid"
		else
			loadstatus " [+] PowerSploit already installed" "OK" "valid"
		fi

		## Pwnat
		## https://samy.pl/pwnat/
		## ----------------------
		if [ ! -f "/etc/archsploit/packages/pwnat.md" ];
		then
			cd /opt/archsploit/networking/pwnat/
			sudo make >/dev/null 2>&1
			sudo ln -s /opt/archsploit/networking/pwnat/pwnat /usr/bin/pwnat

			sudo cp /tmp/packages-networking/usr/applications/archsploit-pwnat.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/pwnat.md >/dev/null 2>&1
			loadstatus " [+] Installing Pwnat" "OK" "valid"
		else
			loadstatus " [+] Pwnat already installed" "OK" "valid"
		fi

		## WebShells
		## https://tools.kali.org/
		## -----------------------
		if [ ! -f "/etc/archsploit/packages/webshells.md" ];
		then
			sudo touch /usr/local/bin/webshells
			sudo chmod +x /usr/local/bin/webshells
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/webshells >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/webshells >/dev/null 2>&1
			echo 'tree /opt/archsploit/networking/webshells/' | sudo tee -a /usr/local/bin/webshells >/dev/null 2>&1

			sudo cp /tmp/packages-networking/usr/applications/archsploit-webshells.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/webshells.md >/dev/null 2>&1
			loadstatus " [+] Installing WebShells" "OK" "valid"
		else
			loadstatus " [+] WebShells already installed" "OK" "valid"
		fi
	fi

	## Configure TOR & Polipo
	## ----------------------
	if [ -f "/tmp/packages-networking/etc/polipo/config" ];
	then
		sudo rm -f /etc/polipo/config
		sudo mv /tmp/packages-networking/etc/polipo/config /etc/polipo/
		sudo mkdir -p /var/log/polipo/
		sudo touch /var/log/polipo/polipo.log
		loadstatus " [+] Polipo Configuration" "OK" "valid"
	else
		loadstatus " [*] Polipo Configuration" "!!" "issue"
	fi

	## Correct User Permissions
	## ------------------------
	sudo chown -R $USER:users /opt/*
	loadstatus " [+] Correct User Permissions" "OK" "valid"
	loadnotice "ArchSploit Networking packages installed successfully"
}

## Install Reporting Packages
## --------------------------
function install_reporting()
{
	loadheader "# Step: Install Reporting Packages"
}

## Install Reverse Engineering Packages
## ------------------------------------
function install_reverse()
{
	loadheader "# Step: Install Reverse Engineering Packages"
}

## Install Sniffing Packages
## -------------------------
function install_sniffing()
{
	loadheader "# Step: Install Sniffing Packages"
}

## Install Social Engineering Packages
## -----------------------------------
function install_social()
{
	loadheader "# Step: Install Social Engineering Packages"
}

## Install Stress-Testing Packages
## -------------------------------
function install_stressing()
{
	loadheader "# Step: Install Stress-Testing Packages"
}

## Install Vulnerability Packages
## ------------------------------
function install_vulnerability()
{
	loadheader "# Step: Install Vulnerability Packages"
}

## Install Webapps Packages
## ------------------------
function install_webapps()
{
	loadheader "# Step: Install Webapps Packages"
}

## Install Wireless Packages
## -------------------------
function install_wireless()
{
	loadheader "# Step: Install Wireless Packages"
}

## -------- ##
## Callback ##
## -------- ##

if [ "$#" -eq  "0" ]
then
	usage
else
	if [ "$1" == "--install" -o "$1" == "-i" ];
	then
		clear
		sudo whoami >/dev/null 2>&1

		showbanner
		checkinternet

		case "$2" in
		cracking)
			install_cracking
			;;
		exploitation)
			install_exploitation
			;;
		forensics)
			install_forensics
			;;
		gathering)
			install_gathering
			;;
		hardware)
			install_hardware
			;;
		miscs)
			install_miscs
			;;
		networking)
			install_networking
			;;
		reporting)
			install_reporting
			;;
		reverse)
			install_reverse
			;;
		sniffing)
			install_sniffing
			;;
		social)
			install_social
			;;
		stressing)
			install_stressing
			;;
		vulnerability)
			install_vulnerability
			;;
		webapps)
			install_webapps
			;;
		wireless)
			install_wireless
			;;
		all)
			install_cracking
			install_exploitation
			install_forensics
			install_gathering
			install_hardware
			install_miscs
			install_networking
			install_reporting
			install_reverse
			install_sniffing
			install_social
			install_stressing
			install_vulnerability
			install_webapps
			install_wireless
			;;
		*)
	        usage
	        exit 1
	        ;;
	    esac
	    exit 0
	elif [ "$1" == "--help" -o "$1" == "-h" ];
	then
		usage
	else
		usage
	fi
fi
