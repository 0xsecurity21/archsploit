			install_reporting
			;;
		reverse)
			install_reverse
			;;
		scanning)
			install_scanning
			;;
		sniffing)
			install_sniffing
			;;
		social)
			install_social
			;;
		stress-testing)
			install_stressing
			;;
		vulnerability)
			install_vulnerability
			;;
		webapps)
			install_webapps
			;;
		wireless)
			install_wireless
			;;
		all)
			install_bluetooth
			install_cracking
			install_cryptography
			install_debugger
			install_exploitation
			install_fingerprint
			install_forensics
			install_gathering
			install_hardware
			install_honeypot
