			install_scanning
			install_sniffing
			install_social
			install_stressing
			install_vulnerability
			install_webapps
			install_wireless
			;;
		*)
	        usage
	        exit 1
	        ;;
	    esac
	    exit 0
	elif [ "$1" == "--help" -o "$1" == "-h" ];
	then
		usage
	else
		usage
	fi
