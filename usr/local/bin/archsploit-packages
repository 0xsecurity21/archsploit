	loadstatus " [+] Update System Packages" "OK" "valid"

	## Install Arch Repository Tools
	## -----------------------------
	sudo pacman -S chntpw >/dev/null 2>&1
	loadstatus " [+] Install Chntpw" "OK" "valid"

	sudo pacman -S extundelete >/dev/null 2>&1
	loadstatus " [+] Install Extundelete" "OK" "valid"

	sudo pacman -S foremost >/dev/null 2>&1
	loadstatus " [+] Install Foremost" "OK" "valid"

	## Install Github Repository Tools
	## -------------------------------
	sudo mkdir -p /opt/archsploit/
	cd /tmp/
	sudo git clone https://github.com/archsploit/packages-forensics

	if [ ! -d "/tmp/packages-forensics/opt/archsploit/forensics/" ];
	then
		## Copy Forensics Tools
		## --------------------
		sudo cp -r /tmp/packages-forensics/opt/archsploit/forensics/ /opt/archsploit/
		loadstatus " [+] Copy Github Tools" "OK" "valid"

		## Ddrescue
	    ## http://www.garloff.de/kurt/linux/ddrescue/
	    ## ------------------------------------------
		if [ ! -f "/etc/archsploit/packages/ddrescue.md" ];
		then
			cd /opt/archsploit/forensics/ddrescue/
			sudo make >/dev/null 2>&1
			sudo mv /opt/archsploit/forensics/ddrescue/dd_rescue /opt/archsploit/forensics/ddrescue/ddrescue
			sudo ln -s /opt/archsploit/forensics/ddrescue/ddrescue /usr/bin/ddrescue

			sudo cp /tmp/packages-forensics/usr/share/applications/archsploit-ddrescue.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/ddrescue.md >/dev/null 2>&1
			loadstatus " [+] Installing Ddrescue" "OK" "valid"
		else
			loadstatus " [+] Ddrescue already installed" "OK" "valid"
		fi

		## Dumpzilla
		## https://www.dumpzilla.org/
		## --------------------------
		if [ ! -f "/etc/archsploit/packages/dumpzilla.md" ];
		then
			sudo chmod +x /opt/archsploit/forensics/dumpzilla/dumpzilla.py
			sudo ln -s /opt/archsploit/forensics/dumpzilla/dumpzilla.py /usr/bin/dumpzilla

			sudo cp /tmp/packages-forensics/usr/share/applications/archsploit-dumpzilla.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/dumpzilla.md >/dev/null 2>&1
			loadstatus " [+] Installing Dumpzilla" "OK" "valid"
		else
			loadstatus " [+] Dumpzilla already installed" "OK" "valid"
		fi

		## Pdf-Parser
		## https://blog.didierstevens.com/programs/pdf-parser/
		## ---------------------------------------------------
		if [ ! -f "/etc/archsploit/packages/pdf-parser.md" ];
		then
			sudo chmod +x /opt/archsploit/forensics/pdf-parser/pdf-parser.py
			sudo ln -s /opt/archsploit/forensics/pdf-parser/pdf-parser.py /usr/bin/pdf-parser

			sudo cp /tmp/packages-forensics/usr/share/applications/archsploit-pdf-parser.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/pdf-parser.md >/dev/null 2>&1
			loadstatus " [+] Installing Pdf-Parser" "OK" "valid"
		else
			loadstatus " [+] Pdf-Parser already installed" "OK" "valid"
		fi
	fi

	## Correct User Permissions
    ## ------------------------
    sudo chown -R $USER:users /opt/*
	loadstatus " [+] Correct User Permissions" "OK" "valid"
	loadnotice "ArchSploit Forensics packages installed successfully"
}

## Install Gathering Packages
## --------------------------
function install_gathering()
{
	loadheader "# Step: Install Gathering Packages"

	## Update System
	## -------------
	sudo pacman -Syyu --noconfirm --needed >/dev/null 2>&1
	loadstatus " [+] Update System Packages" "OK" "valid"

	## Install Arch Repository Tools
	## -----------------------------
	sudo pacman -S arp-scan >/dev/null 2>&1
	loadstatus " [+] Install Arp-Scan" "OK" "valid"

	sudo pacman -S dnstracer >/dev/null 2>&1
	loadstatus " [+] Install Dnstracer" "OK" "valid"

	sudo pacman -S masscan >/dev/null 2>&1
	loadstatus " [+] Install Masscan" "OK" "valid"

	sudo pacman -S nmap >/dev/null 2>&1
	loadstatus " [+] Install Nmap" "OK" "valid"

	sudo pacman -S p0f >/dev/null 2>&1
	loadstatus " [+] Install P0f" "OK" "valid"

	sudo pacman -S sslsplit >/dev/null 2>&1
	loadstatus " [+] Install Sslsplit" "OK" "valid"

	sudo pacman -S thc-ipv6 >/dev/null 2>&1
	loadstatus " [+] Install Thc-ipv6" "OK" "valid"

	sudo pacman -S traceroute >/dev/null 2>&1
	loadstatus " [+] Install Traceroute" "OK" "valid"

	sudo pacman -S whois >/dev/null 2>&1
	loadstatus " [+] Install Whois" "OK" "valid"

	## Install Github Repository Tools
	## -------------------------------
	sudo mkdir -p /opt/archsploit/
	cd /tmp/
	sudo git clone https://github.com/archsploit/packages-gathering

	if [ ! -d "/tmp/packages-gathering/opt/archsploit/gathering/" ];
	then
		## Copy Forensics Tools
		## --------------------
		sudo cp -r /tmp/packages-gathering/opt/archsploit/gathering/ /opt/archsploit/
		loadstatus " [+] Copy Github Tools" "OK" "valid"

		## Automater
	    ## https://github.com/1aN0rmus/TekDefense-Automater/
	    ## -------------------------------------------------
		if [ ! -f "/etc/archsploit/packages/automater.md" ];
		then
		    sudo chmod +x /opt/archsploit/gathering/automater/automater.py
		    sudo ln -s /opt/archsploit/gathering/automater/automater.py /usr/bin/automater

			sudo cp /tmp/packages-gathering/usr/share/applications/archsploit-automater.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/automater.md >/dev/null 2>&1
		    loadstatus " [+] Installing Automater" "OK" "valid"
		else
			loadstatus " [+] Automater already installed" "OK" "valid"
		fi

		## DNSMap
		## https://code.google.com/archive/p/dnsmap/
		## -----------------------------------------
		if [ ! -f "/etc/archsploit/packages/dnsmap.md" ];
		then
			cd /opt/archsploit/gathering/dnsmap/
			sudo make >/dev/null 2>&1
			sudo ln -s /opt/archsploit/gathering/dnsmap/dnsmap /usr/bin/dnsmap
			sudo ln -s /opt/archsploit/gathering/dnsmap/dnsmap-bulk.sh /usr/bin/dnsmap-bulk

			sudo cp /tmp/packages-gathering/usr/share/applications/archsploit-dnsmap.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/dnsmap.md >/dev/null 2>&1
			loadstatus " [+] Installing DNSMap" "OK" "valid"
		else
			loadstatus " [+] DNSMap already installed" "OK" "valid"
		fi

		## Enum4Linux
		## https://labs.portcullis.co.uk/tools/enum4linux/
		## -----------------------------------------------
		if [ ! -f "/etc/archsploit/packages/enum4linux.md" ];
		then
			sudo chmod +x /opt/archsploit/gathering/enum4linux/enum4linux.pl
			sudo ln -s /opt/archsploit/gathering/enum4linux/enum4linux.pl /usr/bin/enum4linux

			sudo cp /tmp/packages-gathering/usr/share/applications/archsploit-enum4linux.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/enum4linux.md >/dev/null 2>&1
			loadstatus " [+] Installing Enum4Linux" "OK" "valid"
		else
			loadstatus " [+] Enum4Linux already installed" "OK" "valid"
		fi

		## Enumiax
		## https://sourceforge.net/projects/enumiax/
		## -----------------------------------------
		if [ ! -f "/etc/archsploit/packages/enumiax.md" ];
		then
			cd /opt/archsploit/gathering/enumiax/
			sudo make >/dev/null 2>&1
			sudo ln -s /opt/archsploit/gathering/enumiax/enumiax /usr/bin/enumiax

			sudo cp /tmp/packages-gathering/usr/share/applications/archsploit-enumiax.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/enumiax.md >/dev/null 2>&1
			loadstatus " [+] Installing Enumiax" "OK" "valid"
		else
			loadstatus " [+] Enumiax already installed" "OK" "valid"
		fi

		## LinEnum
		## https://github.com/rebootuser/LinEnum/
		## --------------------------------------
		if [ ! -f "/etc/archsploit/packages/linenum.md" ];
		then
			sudo chmod +x /opt/archsploit/gathering/linenum/linenum.sh
			sudo ln -s /opt/archsploit/gathering/linenum/linenum.sh /usr/bin/linenum

			sudo cp /tmp/packages-gathering/usr/share/applications/archsploit-linenum.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/linenum.md >/dev/null 2>&1
			loadstatus " [+] Installing LinEnum" "OK" "valid"
		else
			loadstatus " [+] LinEnum already installed" "OK" "valid"
		fi

		## Nikto
		## https://github.com/sullo/nikto/
		## -------------------------------
		if [ ! -f "/etc/archsploit/packages/nikto.md" ];
		then
			sudo chmod +x /opt/archsploit/gathering/nikto/program/nikto.pl
			sudo touch /usr/local/bin/nikto
			sudo chmod +x /usr/local/bin/nikto
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/nikto >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/nikto >/dev/null 2>&1
			echo 'cd /opt/archsploit/gathering/nikto/program/' | sudo tee -a /usr/local/bin/nikto >/dev/null 2>&1
			echo 'sudo ./nikto.pl $@' | sudo tee -a /usr/local/bin/nikto >/dev/null 2>&1

			sudo cp /tmp/packages-gathering/usr/share/applications/archsploit-nikto.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/nikto.md >/dev/null 2>&1
			loadstatus " [+] Installing Nikto" "OK" "valid"
		else
			loadstatus " [+] Nikto already installed" "OK" "valid"
		fi

		## Nullinux
		## https://github.com/m8r0wn/nullinux/
		## -----------------------------------
		if [ ! -f "/etc/archsploit/packages/nullinux.md" ];
		then
			sudo chmod +x /opt/archsploit/gathering/nullinux/nullinux.py
			sudo ln -s /opt/archsploit/gathering/nullinux/nullinux.py /usr/bin/nullinux

			sudo cp /tmp/packages-gathering/usr/share/applications/archsploit-nullinux.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/nullinux.md >/dev/null 2>&1
			loadstatus " [+] Installing Nullinux" "OK" "valid"
		else
			loadstatus " [+] Nullinux already installed" "OK" "valid"
		fi

		## SMTP User Enum
		## https://github.com/pentestmonkey/smtp-user-enum/
		## ------------------------------------------------
		if [ ! -f "/etc/archsploit/packages/smtp-user-enum.md" ];
		then
			sudo chmod +x /opt/archsploit/gathering/smtp-user-enum/smtp-user-enum.pl
			sudo ln -s /opt/archsploit/gathering/smtp-user-enum/smtp-user-enum.pl /usr/bin/smtp-user-enum

			sudo cp /tmp/packages-gathering/usr/share/applications/archsploit-smtp-user-enum.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/smtp-user-enum.md >/dev/null 2>&1
			loadstatus " [+] Installing SMTP User Enum" "OK" "valid"
		else
			loadstatus " [+] SMTP User Enum already installed" "OK" "valid"
		fi
	fi

	## Correct User Permissions
    ## ------------------------
    sudo chown -R $USER:users /opt/*
	loadstatus " [+] Correct User Permissions" "OK" "valid"
	loadnotice "ArchSploit Gathering packages installed successfully"
}

