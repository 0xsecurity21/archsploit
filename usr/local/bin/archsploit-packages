#!/usr/bin/env bash

## ---------------- ##
## Define Variables ##
## ---------------- ##

## Colour Output
## -------------
color_d9534f="\033[01;31m"	# Issues/Errors
color_5cb85c="\033[01;32m"	# Success
color_f0ad4e="\033[01;33m"	# Warnings/Information
color_0275d8="\033[01;34m"	# Heading
color_revert="\033[00m"		# Normal

## Text Options
## ------------
text_bold="\e[1m"		# Text Bold
text_line="\e[4m"		# Text Underline
text_main="\e[0m"		# Text Normal

## Load Banner
## -----------
function showbanner()
{
	clear
	echo -e "${color_d9534f}                  _               _       _ _       ${color_revert}"
	echo -e "${color_d9534f}    __ _ _ __ ___| |__  ___ _ __ | | ___ (_) |_     ${color_revert}"
	echo -e "${color_d9534f}   / _' | '__/ __| '_ \/ __| '_ \| |/ _ \| | __|    ${color_revert}"
	echo -e "${color_d9534f}  | (_| | | | (__| | | \__ \ |_) | | (_) | | |_     ${color_revert}"
	echo -e "${color_d9534f}   \__,_|_|  \___|_| |_|___/ .__/|_|\___/|_|\__|    ${color_revert}"
	echo -e "${color_d9534f}                           |_|            v2.0.2    ${color_revert}"
	echo
	echo -e "${color_5cb85c} [i] [Package]: archsploit-packages${color_revert}"
	echo -e "${color_5cb85c} [i] [Website]: https://archsploit.org${color_revert}"
  	echo
  	sleep 1s
}

## Load Header
## -----------
function loadheader()
{
	echo
    echo -e "${color_0275d8}${@}${color_revert}"
	sleep 2
}

## Load Notice
## -----------
function loadnotice()
{
	echo -e "${color_5cb85c}${@}${color_revert}"
	sleep 5
}

## Load Status
## -----------
function loadstatus()
{
    color_d9534f=$(tput setaf 1)
    color_5cb85c=$(tput setaf 2)
    color_f0ad4e=$(tput setaf 3)
    color_0275d8=$(tput setaf 4)
    color_revert=$(tput sgr0)

    message=$1
    display="[$2]"

    if [ "$3" == "issue" ];
    then
        return="$color_d9534f${display}$color_revert"
    elif [ "$3" == "valid" ];
    then
        return="$color_5cb85c${display}$color_revert"
    elif [ "$3" == "warning" ];
    then
        return="$color_f0ad4e${display}$color_revert"
    elif [ "$3" == "info" ];
    then
        return="$color_f0ad4e${display}$color_revert"
    else
        return="$color_revert${display}$color_revert"
    fi

    let COL=$(tput cols)-${#message}+${#return}-${#display}

    echo -n $message
    printf "%${COL}s\n"  "$return"
}

## Display Usage
## -------------
function usage
{
	clear
    echo "usage: archsploit-system [-i --install] or [-h --help]"
	echo
	echo "  -i      - Followed by the packages category name to be installed by the script"
	echo "  -h      - Display this help menu"
	echo
	echo -e "${text_bold}Packages:${text_main}"
    echo "  cracking          - Install and configure Cracking Tools"
    echo "  exploitation      - Install and configure Exploitation Tools"
    echo "  forensics         - Install and configure Forensics Tools"
    echo "  gathering         - Install and configure Gathering Tools"
    echo "  hardware          - Install and configure Hardware Tools"
    echo "  miscs             - Install and configure Miscs Tools"
    echo "  networking        - Install and configure Networking Tools"
    echo "  reporting         - Install and configure Reporting Tools"
    echo "  reverse           - Install and configure Reverse Tools"
    echo "  sniffing          - Install and configure Sniffing Tools"
    echo "  social            - Install and configure Social Tools"
    echo "  stressing         - Install and configure Stress-Testing Tools"
    echo "  vulnerability     - Install and configure Vulnerability Tools"
    echo "  webapps           - Install and configure Webapps Tools"
    echo "  wireless          - Install and configure Wireless Tools"
	echo
    exit 1
}

## Check Internet status
## ---------------------
function checkinternet()
{
	for i in {1..10};
	do
		ping -c 1 -W ${i} www.google.com &>/dev/null && break;
	done

	if [[ "$?" -ne 0 ]];
	then
		cd /tmp/
		echo
		echo -e " ${color_d9534f}[!]${color_revert} An unknown error occured ~ Possible DNS issues or no Internet connection"
		echo -e " ${color_d9534f}[!]${color_revert} Quitting ..."
		echo -e "\n"
		exit 1
	fi
}

## Install Cracking Packages
## -------------------------
function install_cracking()
{
	loadheader "# Step: Install Cracking Packages"

	## Update System
	## -------------
	sudo pacman -Syyu --noconfirm --needed >/dev/null 2>&1
	loadstatus " [+] Update System Packages" "OK" "valid"

	## Install Arch Repository Tools
	## -----------------------------
	sudo pacman -S hashcat >/dev/null 2>&1
	loadstatus " [+] Install Hashcat" "OK" "valid"

	sudo pacman -S hydra >/dev/null 2>&1
	loadstatus " [+] Install Hydra" "OK" "valid"

	sudo pacman -S john >/dev/null 2>&1
	loadstatus " [+] Install John" "OK" "valid"

	sudo pacman -S ncrack >/dev/null 2>&1
	loadstatus " [+] Install Ncrack" "OK" "valid"

	sudo pacman -S ophcrack >/dev/null 2>&1
	loadstatus " [+] Install Ophcrack" "OK" "valid"

	## Install Github Repository Tools
	## -------------------------------
	sudo mkdir -p /opt/archsploit/
	cd /tmp/
	sudo git clone https://github.com/archsploit/packages-cracking

	if [ ! -d "/tmp/packages-cracking/opt/archsploit/cracking/" ];
	then
		## Copy Cracking Tools
		## -------------------
		sudo cp -r /tmp/packages-cracking/opt/archsploit/cracking/ /opt/archsploit/
		loadstatus " [+] Copy Github Tools" "OK" "valid"

		## CredCrack
	    ## https://github.com/gojhonny/CredCrack/
	    ## --------------------------------------
		if [ ! -f "/etc/archsploit/packages/credcrack.md" ];
		then
		    sudo chmod +x /opt/archsploit/cracking/credcrack/credcrack.py
		    sudo ln -s /opt/archsploit/cracking/credcrack/credcrack.py /usr/bin/credcrack

			sudo cp /tmp/packages-cracking/usr/share/applications/archsploit-credcrack.desktop /usr/share/applications/archsploit-credcrack.desktop
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/credcrack.md >/dev/null 2>&1
			loadstatus " [+] Installing CredCrack" "OK" "valid"
		else
			loadstatus " [+] CredCrack already installed" "OK" "valid"
		fi

		## Findmyhash
		## https://code.google.com/archive/p/findmyhash/
		## ---------------------------------------------
		if [ ! -f "/etc/archsploit/packages/findmyhash.md" ];
		then
			sudo chmod +x /opt/archsploit/cracking/findmyhash/findmyhash.py
			sudo ln -s /opt/archsploit/cracking/findmyhash/findmyhash.py /usr/bin/findmyhash

			sudo cp /tmp/packages-cracking/usr/share/applications/archsploit-findmyhash.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/findmyhash.md >/dev/null 2>&1
			loadstatus " [+] Installing Findmyhash" "OK" "valid"
		else
			loadstatus " [+] Findmyhash already installed" "OK" "valid"
		fi

		## HashID
		## http://code.google.com/p/hash-identifier/
		## -----------------------------------------
		if [ ! -f "/etc/archsploit/packages/hashid.md" ];
		then
			sudo chmod +x /opt/archsploit/cracking/hashid/hashid.py
			sudo ln -s /opt/archsploit/cracking/hashid/hashid.py /usr/bin/hashid

			sudo cp /tmp/packages-cracking/usr/share/applications/archsploit-hashid.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/hashid.md >/dev/null 2>&1
			loadstatus " [+] Installing HashID" "OK" "valid"
		else
			loadstatus " [+] HashID already installed" "OK" "valid"
		fi

		## HashTag
		## https://github.com/SmeegeSec/HashTag/
		## -------------------------------------
		if [ ! -f "/etc/archsploit/packages/hashtag.md" ];
		then
			sudo chmod +x /opt/archsploit/cracking/hashtag/hashtag.py
			sudo ln -s /opt/archsploit/cracking/hashtag/hashtag.py /usr/bin/hashtag

			sudo cp /tmp/packages-cracking/usr/share/applications/archsploit-hashtag.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/hashtag.md >/dev/null 2>&1
			loadstatus " [+] Installing HashTag" "OK" "valid"
		else
			loadstatus " [+] HashTag already installed" "OK" "valid"
		fi

		## Rainbowcrack
		## https://project-rainbowcrack.com/
		## ---------------------------------
		if [ ! -f "/etc/archsploit/packages/rainbowcrack.md" ];
		then
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rcrack
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rt2rtc
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rtc2rt
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rtgen
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rtmerge
			sudo chmod +x /opt/archsploit/cracking/rainbowcrack/rtsort
			sudo touch /usr/local/bin/rcrack
			sudo chmod +x /usr/local/bin/rcrack
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rcrack >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rcrack >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rcrack >/dev/null 2>&1
			echo './rcrack' | sudo tee -a /usr/local/bin/rcrack >/dev/null 2>&1
			sudo touch /usr/local/bin/rt2rtc
			sudo chmod +x /usr/local/bin/rt2rtc
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rt2rtc >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rt2rtc >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rt2rtc >/dev/null 2>&1
			echo './rt2rtc' | sudo tee -a /usr/local/bin/rt2rtc >/dev/null 2>&1
			sudo touch /usr/local/bin/rtc2rt
			sudo chmod +x /usr/local/bin/rtc2rt
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rtc2rt >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rtc2rt >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rtc2rt >/dev/null 2>&1
			echo './rtc2rt' | sudo tee -a /usr/local/bin/rtc2rt >/dev/null 2>&1
			sudo touch /usr/local/bin/rtgen
			sudo chmod +x /usr/local/bin/rtgen
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rtgen >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rtgen >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rtgen >/dev/null 2>&1
			echo './rtgen' | sudo tee -a /usr/local/bin/rtgen >/dev/null 2>&1
			sudo touch /usr/local/bin/rtmerge
			sudo chmod +x /usr/local/bin/rtmerge
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rtmerge >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rtmerge >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rtmerge >/dev/null 2>&1
			echo './rtmerge' | sudo tee -a /usr/local/bin/rtmerge >/dev/null 2>&1
			sudo touch /usr/local/bin/rtsort
			sudo chmod +x /usr/local/bin/rtsort
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/rtsort >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/rtsort >/dev/null 2>&1
			echo 'cd /opt/archsploit/cracking/rainbowcrack/' | sudo tee -a /usr/local/bin/rtsort >/dev/null 2>&1
			echo './rtsort' | sudo tee -a /usr/local/bin/rtsort >/dev/null 2>&1

			sudo cp /tmp/packages-cracking/usr/share/applications/archsploit-rcrack.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/rainbowcrack.md >/dev/null 2>&1
			loadstatus " [+] Installing Rainbowcrack" "OK" "valid"
		else
			loadstatus " [+] Rainbowcrack already installed" "OK" "valid"
		fi
	fi

	## Correct User Permissions
    ## ------------------------
    sudo chown -R $USER:users /opt/*
	loadstatus " [+] Correct User Permissions" "OK" "valid"
	loadnotice "ArchSploit Cracking packages installed successfully"
}

## Install Exploitation Packages
## -----------------------------
function install_exploitation()
{
	loadheader "# Step: Install Exploitation Packages"

	## Update System
	## -------------
	sudo pacman -Syyu --noconfirm --needed >/dev/null 2>&1
	loadstatus " [+] Update System Packages" "OK" "valid"

	## Install Github Repository Tools
	## -------------------------------
	sudo mkdir -p /opt/archsploit/
	cd /tmp/
	sudo git clone https://github.com/archsploit/packages-exploitation

	if [ ! -d "/tmp/packages-exploitation/opt/archsploit/exploitation/" ];
	then
		## Copy Exploitation Tools
		## -----------------------
		sudo cp -r /tmp/packages-exploitation/opt/archsploit/exploitation/ /opt/archsploit/
		loadstatus " [+] Copy Github Tools" "OK" "valid"

		## Armitage
	    ## http://www.fastandeasyhacking.com
	    ## ---------------------------------
		if [ ! -f "/etc/archsploit/packages/armitage.md" ];
		then
			wget -O /tmp/armitage.tgz http://www.fastandeasyhacking.com/download/armitage150813.tgz
			if [ ! -f "/tmp/armitage.tgz" ];
			then
				cd /tmp/
				tar -xvzf /tmp/armitage.tgz
				sudo mv /tmp/armitage /opt/archsploit/exploitation/
				sudo ln -s /opt/archsploit/exploitation/armitage/armitage /usr/local/bin/armitage
				sudo ln -s /opt/archsploit/exploitation/armitage/teamserver /usr/local/bin/teamserver
				sh -c "echo java -jar /opt/archsploit/exploitation/armitage/armitage.jar \$\* > /opt/archsploit/exploitation/armitage/armitage"
				sudo perl -pi -e 's/armitage.jar/\/opt\/archsploit\/exploitation\/armitage\/armitage.jar/g' /opt/armitage/teamserver
				echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/armitage.md >/dev/null 2>&1
			    loadstatus " [+] Installing Armitage" "OK" "valid"
			else
				loadstatus " [*] Installing Armitage" "!!" "issue"
			fi
		else
			loadstatus " [+] Armitage already installed" "OK" "valid"
		fi

		## Commix
	    ## https://github.com/commixproject/commix/
	    ## ----------------------------------------
		if [ ! -f "/etc/archsploit/packages/commix.md" ];
		then
		    sudo chmod +x /opt/archsploit/exploitation/commix/commix.py
		    sudo touch /usr/local/bin/commix
		    sudo chmod +x /usr/local/bin/commix
		    echo '#!/bin/bash' | sudo tee -a /usr/local/bin/commix >/dev/null 2>&1
		    echo 'clear' | sudo tee -a /usr/local/bin/commix >/dev/null 2>&1
		    echo 'cd /opt/archsploit/exploitation/commix/' | sudo tee -a /usr/local/bin/commix >/dev/null 2>&1
		    echo 'sudo python commix.py $@' | sudo tee -a /usr/local/bin/commix >/dev/null 2>&1

			sudo cp /tmp/packages-exploitation/usr/share/applications/archsploit-commix.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/commix.md >/dev/null 2>&1
			loadstatus " [+] Installing Commix" "OK" "valid"
		else
			loadstatus " [+] Commix already installed" "OK" "valid"
		fi

		## Jexboss
		## https://github.com/joaomatosf/jexboss/
		## --------------------------------------
		if [ ! -f "/etc/archsploit/packages/jexboss.md" ];
		then
			sudo chmod +x /opt/archsploit/exploitation/jexboss/jexboss.py
			sudo touch /usr/local/bin/jexboss
			sudo chmod +x /usr/local/bin/jexboss
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/jexboss >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/jexboss >/dev/null 2>&1
			echo 'cd /opt/archsploit/exploitation/jexboss/' | sudo tee -a /usr/local/bin/jexboss >/dev/null 2>&1
			echo 'sudo python jexboss.py $@' | sudo tee -a /usr/local/bin/jexboss >/dev/null 2>&1

			sudo cp /tmp/packages-exploitation/usr/share/applications/archsploit-jexboss.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/jexboss.md >/dev/null 2>&1
			loadstatus " [+] Installing Jexboss" "OK" "valid"
		else
			loadstatus " [+] Jexboss already installed" "OK" "valid"
		fi

		## Libenom
		## https://github.com/bounteous/libenom/
		## -------------------------------------
		if [ ! -f "/etc/archsploit/packages/libenom.md" ];
		then
			sudo chmod +x /opt/archsploit/exploitation/libenom/libenom.py
			sudo ln -s /opt/archsploit/exploitation/libenom/libenom.py /usr/bin/libenom

			sudo cp /tmp/packages-exploitation/usr/share/applications/archsploit-libenom.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/libenom.md >/dev/null 2>&1
			loadstatus " [+] Installing Libenom" "OK" "valid"
		else
			loadstatus " [+] Libenom already installed" "OK" "valid"
		fi

		## Metasploit
		## https://github.com/rapid7/metasploit-framework/
		## -----------------------------------------------
		if [ ! -f "/etc/archsploit/packages/metasploit.md" ];
		then
			gpg --keyserver hkp://pool.sks-keyservers.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3 7D2BAF1CF37B13E2069D6956105BD0E739499BDB
			wget -O /tmp/rvm.sh https://get.rvm.io
			cd /tmp/
			bash rvm.sh stable
			echo "source ~/.rvm/scripts/rvm" >> ~/.bashrc
			source ~/.rvm/scripts/rvm
			rvm install 2.6.6
			rvm use 2.6.6 --default

			sudo pacman -S postgresql --noconfirm --needed
			sudo chown -R postgres:postgres /var/lib/postgres/
			sudo -Hiu postgres initdb --locale en_US.UTF-8 -E UTF8 -D '/var/lib/postgres/data'
			sudo systemctl start postgresql
			sudo systemctl enable postgresql

			sudo -Hiu postgres createuser msf -P -S -R -D
			sudo -Hiu postgres createdb -O msf msf

			cd /opt/
			sudo git clone https://github.com/rapid7/metasploit-framework metasploit
			cd /opt/metasploit/
			gem install wirble sqlite3 bundler
			bundle install
			sudo touch /opt/metasploit/config/database.yml
			echo 'production:' | sudo tee -a /opt/metasploit/config/database.yml
			echo ' adapter: postgresql' | sudo tee -a /opt/metasploit/config/database.yml
			echo ' database: msf' | sudo tee -a /opt/metasploit/config/database.yml
			echo ' username: msf' | sudo tee -a /opt/metasploit/config/database.yml
			echo ' password: msf' | sudo tee -a /opt/metasploit/config/database.yml
			echo ' host: 127.0.0.1' | sudo tee -a /opt/metasploit/config/database.yml
			echo ' port: 5432' | sudo tee -a /opt/metasploit/config/database.yml
			echo ' pool: 75' | sudo tee -a /opt/metasploit/config/database.yml
			echo ' timeout: 5' | sudo tee -a /opt/metasploit/config/database.yml
			sudo sh -c "echo export MSF_DATABASE_CONFIG=/opt/metasploit/config/database.yml >> /etc/profile"
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/metasploit.md >/dev/null 2>&1
			loadstatus " [+] Installing Metasploit" "OK" "valid"
		else
			loadstatus " [+] Metasploit already installed" "OK" "valid"
		fi

		## PocSuite3
		## https://github.com/knownsec/pocsuite3/
		## --------------------------------------
		if [ ! -f "/etc/archsploit/packages/pocsuite3.md" ];
		then
			sudo pip3 install pocsuite3 >/dev/null 2>&1

			sudo cp /tmp/packages-exploitation/usr/share/applications/archsploit-pocsuite.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/pocsuite3.md >/dev/null 2>&1
			loadstatus " [+] Installing PocSuite3" "OK" "valid"
		else
			loadstatus " [+] PocSuite3 already installed" "OK" "valid"
		fi

		## Routersploit
		## https://github.com/threat9/routersploit/
		## ----------------------------------------
		if [ ! -f "/etc/archsploit/packages/routersploit.md" ];
		then
			cd /opt/archsploit/exploitation/routersploit/
			sudo chmod +x /opt/archsploit/exploitation/routersploit/rsf.py
			sudo touch /usr/local/bin/routersploit
			sudo chmod +x /usr/local/bin/routersploit
			echo '#!/bin/bash' | sudo tee -a /usr/local/bin/routersploit >/dev/null 2>&1
			echo 'clear' | sudo tee -a /usr/local/bin/routersploit >/dev/null 2>&1
			echo 'cd /opt/archsploit/exploitation/routersploit/' | sudo tee -a /usr/local/bin/routersploit >/dev/null 2>&1
			echo 'sudo ./rsf.py $@' | sudo tee -a /usr/local/bin/routersploit >/dev/null 2>&1

			sudo cp /tmp/packages-exploitation/usr/share/applications/archsploit-routersploit.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/routersploit.md >/dev/null 2>&1
			loadstatus " [+] Installing Routersploit" "OK" "valid"
		else
			loadstatus " [+] Routersploit already installed" "OK" "valid"
		fi

		## Shellnoob
		## https://github.com/reyammer/shellnoob/
		## --------------------------------------
		if [ ! -f "/etc/archsploit/packages/shellnoob.md" ];
		then
			sudo chmod +x /opt/archsploit/exploitation/shellnoob/shellnoob.py
			sudo ln -s /opt/archsploit/exploitation/shellnoob/shellnoob.py /usr/bin/shellnoob

			sudo cp /tmp/packages-exploitation/usr/share/applications/archsploit-shellnoob.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/shellnoob.md >/dev/null 2>&1
			loadstatus " [+] Installing Shellnoob" "OK" "valid"
		else
			loadstatus " [+] Shellnoob already installed" "OK" "valid"
		fi

		## Unicorn
		## https://github.com/trustedsec/unicorn/
		## --------------------------------------
		if [ ! -f "/etc/archsploit/packages/unicorn.md" ];
		then
			sudo chmod +x /opt/archsploit/exploitation/unicorn/unicorn.py
			sudo ln -s /opt/archsploit/exploitation/unicorn/unicorn.py /usr/bin/unicorn

			sudo cp /tmp/packages-exploitation/usr/share/applications/archsploit-unicorn.desktop /usr/share/applications/
			echo "Version: 1.0.1" | sudo tee /etc/archsploit/packages/unicorn.md >/dev/null 2>&1
			loadstatus " [+] Installing Unicorn" "OK" "valid"
		else
			loadstatus " [+] Unicorn already installed" "OK" "valid"
		fi
	fi

	## Correct User Permissions
    ## ------------------------
    sudo chown -R $USER:users /opt/*
	loadstatus " [+] Correct User Permissions" "OK" "valid"
	loadnotice "ArchSploit Exploitation packages installed successfully"
}

## Install Forensics Packages
## --------------------------
function install_forensics()
{
	loadheader "# Step: Install Forensics Packages"

	## Update System
	## -------------
