	loadheader "# Step: Install Wireless Packages"
}

## -------- ##
## Callback ##
## -------- ##

if [ "$#" -eq  "0" ]
then
	usage
else
	if [ "$1" == "--install" -o "$1" == "-i" ];
	then
		clear
		sudo whoami >/dev/null 2>&1

		showbanner
		checkinternet

		case "$2" in
	    bluetooth)
			install_bluetooth
			;;
		cracking)
			install_cracking
			;;
		cryptography)
			install_cryptography
			;;
		debugger)
			install_debugger
			;;
		exploitation)
			install_exploitation
			;;
		fingerprint)
			install_fingerprint
			;;
		forensics)
			install_forensics
			;;
		gathering)
			install_gathering
			;;
		hardware)
			install_hardware
			;;
		honeypot)
			install_honeypot
			;;
		malware)
			install_malware
			;;
		miscs)
			install_miscs
			;;
		networking)
			install_networking
			;;
